<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <TableRow>
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Neue Ziehung"
            android:textSize="40dp"
            android:layout_span="2"
            android:id="@+id/nziehtext"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Kunde:"
            android:textSize="30dp"/>
        <Spinner
            android:layout_width="300dp"
            android:id="@+id/nziehk"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Kundenvertreter:"
            android:textSize="30dp"/>
        <Spinner
            android:id="@+id/nziehkv"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Probenzieher:"
            android:textSize="30dp"/>
        <Spinner
            android:id="@+id/nziehpz"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Datum/Zeit:"
            android:textSize="30dp"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:calendarViewShown="false"
            android:id="@+id/nziehdate"/>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:id="@+id/nziehtime"/>

    </TableRow>

    <TableRow>
        <TextView
            android:text="Ziehungsort:"
            android:textSize="30dp"/>
        <EditText
            android:textSize="30dp"
            android:id="@+id/nziehort"/>
    </TableRow>

    <TableRow>
        <Button
            android:text="Abbrechen"
            android:id="@+id/nziehabb"/>
        <Button
            android:text="Speichern"
            android:id="@+id/nziehsave"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="LÃ¶schen"
            android:id="@+id/nziehdel"
            android:enabled="false"
            android:visibility="invisible"
            android:layout_span="2"/>
    </TableRow>

</TableLayout>
</ScrollView>